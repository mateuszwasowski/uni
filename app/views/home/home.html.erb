<div id="wrapper">
    <!-- Sidebar -->
    <%= render 'sidebar' %>
    <!-- Page Content -->
    <div id="page-content-wrapper" class="main-content">
        <div class="container-fluid" id="container">
        <%= render 'nav' %>
          <div class="row" id="content">
                <div class="col-lg-12 text-center">
                    <% @uni.each do |uni| %>
                      <%= link_to uni_show_path(uni.id) ,style:"border:0;" do%>
                        <div class="col-lg-2 box-file">
                            <div class="file">
                                <div class="row folder-icon">
                                    <i class="fa fa-book folder-ico "></i>
                                </div>
                                <div class="row folder-name">
                                  <%=uni.name %>
                                </div>
                            </div>
                        </div>
                      <% end %>
                    <% end %>
                </div>
          </div>
        </div>
    </div>
</div>
