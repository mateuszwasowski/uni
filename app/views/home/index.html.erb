<!doctype html>
<html lang="en">
<head>
	<title>Unipload</title>
	<meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>
<!-- BODY -->

<div class="container" id="main">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3 text-center" id="test">
				<%= image_tag('logo.png', alt: 'unipload_logo')%>
			</div>
		</div>
		<div class="row" id="signInButton">
			<div class="col-lg-4 col-lg-offset-4 text-center">
				<a href="#signIn" role="button" class="biliboard radial" data-toggle="modal">
					<%= link_to omniauth_authorize_path(:user, :facebook), class: "btn btn-block btn-social btn-facebook" do %>
					  <span class="fa fa-facebook"></span> Sign in with Facebook
					<% end %>
				</a>
			</div>
		</div>
</div>
<!-- SCRIPTS -->
</body>
</html>
