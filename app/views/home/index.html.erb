<div class="container" id="main">
    <div class="col-lg-6 col-lg-offset-3 text-center" id="logo">
      <%= image_tag('logo.png', alt: 'unipload_logo')%>
    </div>
  <div class="text-center col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 col-lg-4 col-md-4 col-md-offset-4 col-lg-offset-4">
      <div id="form-wrapper">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

        <% end %>
      </div>

      <%= link_to "", id:"formSignIn" do %>
        <div class="text-center" id="signInButton">
        Sign In
        </div>
      <% end %>
      <%= link_to omniauth_authorize_path(:user, :facebook), class: "btn btn-block btn-social btn-facebook" do %>
      <span class="fa fa-facebook"></span>
      Sign in with Facebook
      <% end %>
  </div>

<script>
$(document).ready(function() {
  elem = $("#form-wrapper");
  elem.slideUp();
});
$("#formSignIn").click(function(e) {
    e.preventDefault();
    btn = $("#signInButton");
    elem = $("#form-wrapper");
    if(!elem.hasClass('toggled')){
      elem.addClass('toggled');
    }
    if(!btn.hasClass('toggled')){
      btn.addClass('toggled');
      elem.slideDown();
    }
    else{
      $('form').submit();

    }

});
</script>
