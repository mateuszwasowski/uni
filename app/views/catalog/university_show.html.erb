<div id="wrapper">
    <!-- Sidebar -->
    <%= render 'sidebar' %>
    <!-- Page Content -->
    <div id="page-content-wrapper" class="main-content">
        <div class="container-fluid" id="container">
        <%= render 'nav' %>
          <div class="row" id="content">
                <div class="col-lg-12 text-center">

                  <% @uni.catalogs.where(special:true).order(:name).each do |cat| %>

                    <%= link_to speciality_path(cat.id) ,style:"border:0;" do%>
                      <div class="col-lg-2 box-file">
                          <div class="file">
                              <div class="row folder-icon">
                                  <i class="fa fa-folder-open fa-5x folder-ico"></i>
                              </div>
                              <div class="row folder-name">
                                <%=cat.name %>
                              </div>
                          </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
          </div>
        </div>
    </div>
</div>
<script src="external/jquery/jquery.js"></script>
<script src="jquery-ui.js"></script>
<script>
$("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
});
</script>
