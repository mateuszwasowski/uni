<div class="row " id="top-bar">
  <div class="col-lg-1 topMargin">
    <a class="btn btn-default" href="#menu-toggle" id="menu-toggle">
      <i class="fa fa-bars fa-2x"></i>
    </a>
  </div>
  <div class="col-lg-3 topMargin">
    <div class="input-group">
      <input class="form-control" placeholder="Search for..." type="text">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">
          <span aria-hidden="true" class="glyphicon glyphicon-search"></span>
        </button>
      </span>
    </div>
  </div>
  <%if current_user %>
  <div class="col-lg-3 col-lg-offset-4 topMargin">
    <%= current_user.name %>
  </div>
  <div class="col-lg-1">
    <%= image_tag User.first.avatar.thumb.url ,class:'avatar', alt: 'avatar'%>
  </div>
  <% end %>
</div>
